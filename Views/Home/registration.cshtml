@model HasMohProject.Models.User

<body>
    <div class="nav">
        <div class="User_section">
            <a id="login-btn">Login</a>
            <a id="signup-btn">Sign up</a>
        </div>
    </div>

    <!-- Login Form -->
    <div id="form-container-login" class="form-container hidden">
        <form id="login-form" class="form" method="post" action="@Url.Action("Login", "Account")">
            <h2>Login</h2>
            <label for="login-email">Email:</label>
            <input type="email" id="login-email" name="email" placeholder="Enter your email" required />

            <label for="login-password">Password:</label>
            <input type="password" id="login-password" name="password" placeholder="Enter your password" required />

            <button type="submit">Login</button>
        </form>
    </div>

    <!-- Sign Up Form -->
    <div id="form-container-signup" class="form-container hidden">
        <form id="signup-form" class="form" method="post" action="@Url.Action("Register", "Account")">
            <h2>Sign Up</h2>
            <label for="signup-email">Email:</label>
            <input type="email" id="signup-email" name="email" placeholder="Enter your email" required />

            <label for="signup-password">Password:</label>
            <input type="password" id="signup-password" name="password" placeholder="Enter your password" required />

            <label for="signup-confirm-password">Confirm Password:</label>
            <input type="password" id="signup-confirm-password" name="confirmPassword" placeholder="Confirm your password" required />

            <button type="submit">Sign Up</button>
        </form>
    </div>
</body>
